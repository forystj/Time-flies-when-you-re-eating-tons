<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <div class="container">
      <% include ../partials/header.ejs %>

      <div class="main">
        <h1 class="h1">My Profile</h1>
        <div class="links">
          <button><a href='/posts'>Back to Feed</a></button>
          <button><a href='/posts/new'>Write a new post!</a></button>
        </div>
        <% for (let post of posts) { %>
          <li>
            <a href="/posts/<%= post._id %>"><h2><%= post.caption %></h2><img src="<%= post.img %>" alt=""> </a>
            <h3>Location: </h3><h5><%= post.location %></h5>
            <h3>Link: </h3><h5><%= post.link %></h5>


            <div class="links">
              <button><a href="/posts/<%=post._id %>/edit">Edit</a> </button>
              <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                <input class="button" type="submit" value="Delete">
              </form>
        </div>
        <% } %>
      </li>



        <div class="links">
          <button><a href='/posts/new'>Write a new post!</a></button>
        </div>

      </div>
    </div>
  </body>
</html>
