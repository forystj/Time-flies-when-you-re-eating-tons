<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Homepage</title>
  </head>
  <body>
    <header>

    <% if (username) { %>
      Hi, <%= username %>.<a href="/user/logout"> Log out</a>
      <% } %>

    </header>
    <% include ../partials/header.ejs %>

    <form action="/posts/seed" method="POST">
    <input type="submit" value="Seed">
    </form>

    <br>

    <button class="btn btn-success"><a href='/posts/new'>Write a new post!</a></button>

    <br>

    <% for (let post of posts) { %>
        <li>

          <a href="/posts/<%= post._id %>"><h2> <%= post.caption %>
          </h2></a>


          <br>


          <button class="btn btn-success"><a href="/posts/<%=post._id %>/edit">EDIT</a> </button>

          <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete Post">
          </form>


        </li>
    <% } %>
    </div>
  </body>
</html>
